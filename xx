# Source: functest/templates/chromedriver-service.yaml
apiVersion: v1
kind: Service
metadata:
  name: chromedriver-svc
spec:
  selector:
    app: chromedriver
  ports:
    - protocol: TCP
      port: 4444
      targetPort: 4444
---
# Source: functest/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: RELEASE-NAME-functest
  labels:
    helm.sh/chart: functest-0.1.3
    app.kubernetes.io/name: functest
    app.kubernetes.io/instance: RELEASE-NAME
    app.kubernetes.io/version: "0.9.5"
    app.kubernetes.io/managed-by: Helm
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: metrics
      protocol: TCP
      name: metrics
  selector:
    app.kubernetes.io/name: functest
    app.kubernetes.io/instance: RELEASE-NAME
---
# Source: functest/templates/chromedriver-deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: chromedriver
  labels:
    app: chromedriver
spec:
  replicas: 1
  selector:
    matchLabels:
      app: chromedriver
  template:
    metadata:
      labels:
        app: chromedriver
    spec:
      volumes:
      - name: dshm
        emptyDir:
          medium: Memory
      containers:
      - name: chromedriver
        image: selenium/standalone-chrome:3.141.59
        ports:
        - containerPort: 4444
        resources:
          requests:
            memory: 1Gi
            cpu: 500m
        volumeMounts:
          - mountPath: /dev/shm
            name: dshm
---
# Source: functest/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: RELEASE-NAME-functest
  labels:
    helm.sh/chart: functest-0.1.3
    app.kubernetes.io/name: functest
    app.kubernetes.io/instance: RELEASE-NAME
    app.kubernetes.io/version: "0.9.5"
    app.kubernetes.io/managed-by: Helm
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: functest
      app.kubernetes.io/instance: RELEASE-NAME
  template:
    metadata:
      labels:
        app.kubernetes.io/name: functest
        app.kubernetes.io/instance: RELEASE-NAME
    spec:
      serviceAccountName: RELEASE-NAME-functest
      securityContext:
        {}
      containers:
        - name: functest
          securityContext:
            {}
          image: "schulcloud/functest:0.9.5"
          imagePullPolicy: IfNotPresent
          ports:
            - name: metrics
              containerPort: 9000
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /metrics
              port: 9000
          readinessProbe:
            httpGet:
              path: /metrics
              port: 9000
          resources:
            {}
          envFrom:
            - configMapRef:
                name: RELEASE-NAME-functest
            - secretRef:
                name: RELEASE-NAME-functest
---
# Source: functest/templates/servicemonitor.yaml
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: RELEASE-NAME-functest
  # Change this to the namespace the Prometheus instance is running in
  # namespace: default
  labels:
    helm.sh/chart: functest-0.1.3
    app.kubernetes.io/name: functest
    app.kubernetes.io/instance: RELEASE-NAME
    app.kubernetes.io/version: "0.9.5"
    app.kubernetes.io/managed-by: Helm
    release: prometheus
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: functest
      app.kubernetes.io/instance: RELEASE-NAME
  endpoints:
  - port: metrics
    interval: 15s
---
# Source: functest/templates/tests/test-connection.yaml
apiVersion: v1
kind: Pod
metadata:
  name: "RELEASE-NAME-functest-test-connection"
  labels:
    helm.sh/chart: functest-0.1.3
    app.kubernetes.io/name: functest
    app.kubernetes.io/instance: RELEASE-NAME
    app.kubernetes.io/version: "0.9.5"
    app.kubernetes.io/managed-by: Helm
  annotations:
    "helm.sh/hook": test
spec:
  containers:
    - name: wget
      image: busybox
      command: ['wget']
      args: ['RELEASE-NAME-functest:80']
  restartPolicy: Never
